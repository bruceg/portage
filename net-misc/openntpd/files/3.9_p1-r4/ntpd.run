#!/bin/sh
exec 2>&1

. /etc/conf.d/ntpd

if [ -x /usr/bin/getent ] ; then
	if [ "`getent passwd ntp | cut -d: -f 6`" != "${NTPD_HOME}" ] ; then
		echo "Home directory of ntp needs to be ${NTPD_HOME}"
		echo "Please run 'usermod -d ${NTPD_HOME} ntp'"
		exit 1
	fi
fi

exec \
/usr/sbin/ntpd ${NTPD_OPTS} -d
